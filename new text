                <div class="counter" id="counter">0</div>
                <button class="button" id="countButton">点击计数</button>
                </div>
                </div>
                
                <script>
                    var count = 0;
                    document.getElementById('countButton').addEventListener('click', function () {
                        count++;
                        document.getElementById('counter').textContent = count;
                    });
                </script>
